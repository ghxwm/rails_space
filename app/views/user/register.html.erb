<h2>Register</h2>
<%= form_for :user do |form| %>  <!-- :user 产生input输入框user[screen_name] -->
	<fieldset>
		<legend>Enter You Details</legend>
		<label for="screen_name">Screen name:</label>
		<%= form.text_field :screen_name %><br/>
		<label for="email">Email:</label>
		<%= form.text_field :email %><br/>
		<label for="password">Password:</label>
		<%= form.text_field :password %><br/>
		<%= submit_tag "Register!",:class => "submit" %>
	</fieldset>
<% end %>
